<style>
  .shortstuff-wild-independent {
    background-color: {{ section.settings.background_color }};
    padding: {{ section.settings.section_padding_top }}px 0 {{ section.settings.section_padding_bottom }}px 0;
    position: relative;
    overflow: hidden;
  }

  .shortstuff-wild-independent .wild-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    position: relative;
    z-index: 2;
  }

  /* Static Rainbow - No Floating */
  .shortstuff-wild-independent .static-rainbow {
    position: absolute;
    top: {{ section.settings.rainbow_top_desktop }}%;
    right: {{ section.settings.rainbow_right_desktop }}%;
    width: {{ section.settings.rainbow_size_desktop }}px;
    height: auto;
    z-index: 1;
    opacity: 0.9;
  }

  /* Section Header */
  .shortstuff-wild-independent .wild-header {
    text-align: center;
    margin-bottom: 2rem;
    position: relative;
  }

  .shortstuff-wild-independent .wild-instagram-icon {
    display: inline-block;
    width: {{ section.settings.instagram_icon_size }}px;
    height: {{ section.settings.instagram_icon_size }}px;
    margin-right: 1rem;
    vertical-align: middle;
    object-fit: contain;
  }

  .shortstuff-wild-independent .wild-title {
    font-size: {{ section.settings.title_size }}px;
    font-weight: bold;
    color: {{ section.settings.title_color }} !important;
    margin-bottom: 1.5rem;
    line-height: 1.2;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
  }

  /* Curvy Line Icon */
  .shortstuff-wild-independent .wild-curvy-line-icon {
    display: block;
    position: absolute;
    left: {{ section.settings.curvy_line_x_position }}%;
    transform: translateX(-50%);
    top: {{ section.settings.curvy_line_y_position }}px;
    width: {{ section.settings.curvy_line_size }}px;
    height: auto;
    z-index: 3;
  }

  .shortstuff-wild-independent .wild-description {
    font-size: {{ section.settings.description_size }}px;
    color: {{ section.settings.description_color }} !important;
    line-height: 1.6;
    max-width: 700px;
    margin: 0 auto;
  }

  .shortstuff-wild-independent .wild-description p {
    color: {{ section.settings.description_color }} !important;
    margin: 0;
  }

  /* Gallery Grid */
  .shortstuff-wild-independent .wild-gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .shortstuff-wild-independent .wild-gallery-item {
    position: relative;
    border-radius: {{ section.settings.image_border_radius }}px;
    overflow: hidden;
    aspect-ratio: 1;
    background: white;
  }

  .shortstuff-wild-independent .wild-gallery-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* CTA Section */
  .shortstuff-wild-independent .wild-cta-section {
    text-align: center;
    margin-top: 2rem;
  }

  .shortstuff-wild-independent .wild-cta-text {
    font-size: {{ section.settings.cta_text_size }}px;
    color: {{ section.settings.cta_text_color }} !important;
    margin-bottom: 2rem;
    line-height: 1.5;
  }

  .shortstuff-wild-independent .wild-cta-button {
    background-color: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    padding: 1rem 2.5rem;
    border-radius: {{ section.settings.button_border_radius }}px;
    font-size: {{ section.settings.button_text_size }}px;
    font-weight: 600;
    text-decoration: none;
    display: inline-block;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
  }

  .shortstuff-wild-independent .wild-cta-button:hover {
    background-color: {{ section.settings.button_hover_bg_color }};
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    text-decoration: none;
    color: {{ section.settings.button_text_color }};
  }

  /* Mobile Responsive */
  @media screen and (max-width: 768px) {
    .shortstuff-wild-independent {
      padding: {{ section.settings.section_padding_top_mobile }}px 0 {{ section.settings.section_padding_bottom_mobile }}px 0;
    }

    .shortstuff-wild-independent .wild-container {
      padding: 0 1rem;
    }

    .shortstuff-wild-independent .wild-title {
      font-size: {{ section.settings.title_size | times: 0.8 }}px;
      flex-direction: column;
      gap: 0.5rem;
    }

    .shortstuff-wild-independent .wild-instagram-icon {
      width: {{ section.settings.instagram_icon_size | times: 0.8 }}px;
      height: {{ section.settings.instagram_icon_size | times: 0.8 }}px;
      margin-right: 0;
      margin-bottom: 0.5rem;
    }

    .shortstuff-wild-independent .wild-curvy-line-icon {
      width: {{ section.settings.curvy_line_size_mobile }}px;
      top: {{ section.settings.curvy_line_y_position_mobile }}px;
      left: {{ section.settings.curvy_line_x_position_mobile }}%;
    }

    .shortstuff-wild-independent .wild-description {
      font-size: {{ section.settings.description_size | times: 0.9 }}px;
    }

    .shortstuff-wild-independent .wild-gallery-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }

    .shortstuff-wild-independent .static-rainbow {
      top: {{ section.settings.rainbow_top_mobile }}% !important;
      right: {{ section.settings.rainbow_right_mobile }}% !important;
      width: {{ section.settings.rainbow_size_mobile }}px !important;
    }

    .shortstuff-wild-independent .wild-cta-text {
      font-size: {{ section.settings.cta_text_size | times: 0.9 }}px;
    }
  }

  /* Tablet */
  @media screen and (min-width: 769px) and (max-width: 1024px) {
    .shortstuff-wild-independent .wild-gallery-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media screen and (min-width: 1025px) {
    .shortstuff-wild-independent .wild-gallery-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }
</style>

<section class="shortstuff-wild-independent">
  <!-- Static Rainbow -->
  {% if section.settings.rainbow_icon != blank %}
    <img
      src="{{ section.settings.rainbow_icon | image_url: width: 300 }}"
      alt="Rainbow decoration"
      class="static-rainbow"
      loading="lazy"
    >
  {% endif %}

  <div class="wild-container">
    <!-- Section Header -->
    <div class="wild-header">
      <h2 class="wild-title">
        {% if section.settings.instagram_icon != blank %}
          <img
            src="{{ section.settings.instagram_icon | image_url: width: 100 }}"
            alt="Instagram icon"
            class="wild-instagram-icon"
            loading="lazy"
          >
        {% else %}
          <span style="font-size: {{ section.settings.instagram_icon_size }}px; margin-right: 1rem;">ðŸ“·</span>
        {% endif %}
        {% if section.settings.title != blank %}
          {{ section.settings.title | escape }}
        {% endif %}
      </h2>

      <!-- Curvy Line Icon -->
      {% if section.settings.curvy_line_icon != blank %}
        <img
          src="{{ section.settings.curvy_line_icon | image_url: width: 400 }}"
          alt="Decorative curvy line"
          class="wild-curvy-line-icon"
          loading="lazy"
        >
      {% endif %}

      {% if section.settings.description != blank %}
        <div class="wild-description">{{ section.settings.description }}</div>
      {% endif %}
    </div>

    <!-- Gallery Grid -->
    <div class="wild-gallery-grid">
      {% for block in section.blocks %}
        <div class="wild-gallery-item" {{ block.shopify_attributes }}>
          {% if block.settings.image != blank %}
            {% if block.settings.link != blank %}
              <a href="{{ block.settings.link }}" target="_blank" rel="noopener">
                <img
                  src="{{ block.settings.image | image_url: width: 400 }}"
                  alt="{{ block.settings.image.alt | default: 'Customer photo' }}"
                  class="wild-gallery-image"
                  loading="lazy"
                >
              </a>
            {% else %}
              <img
                src="{{ block.settings.image | image_url: width: 400 }}"
                alt="{{ block.settings.image.alt | default: 'Customer photo' }}"
                class="wild-gallery-image"
                loading="lazy"
              >
            {% endif %}
          {% else %}
            <div
              class="wild-gallery-image"
              style="background-color: #f5f5f5; display: flex; align-items: center; justify-content: center; color: #999; font-size: 14px;"
            >
              Upload Image
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>

    <!-- CTA Section -->
    {% if section.settings.show_cta %}
      <div class="wild-cta-section">
        {% if section.settings.cta_text != blank %}
          <p class="wild-cta-text">{{ section.settings.cta_text | escape }}</p>
        {% endif %}

        {% if section.settings.cta_button_text != blank %}
          <a
            href="{{ section.settings.cta_button_link | default: '#' }}"
            class="wild-cta-button"
            target="_blank"
            rel="noopener"
          >
            {{ section.settings.cta_button_text | escape }}
          </a>
        {% endif %}
      </div>
    {% endif %}
  </div>
</section>

